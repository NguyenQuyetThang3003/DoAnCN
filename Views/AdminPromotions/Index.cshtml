@model List<WedNightFury.Models.GiamGia>

@{
    ViewData["Title"] = "Quản lý khuyến mãi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var q = ViewBag.Q as string;
    bool? active = ViewBag.Active as bool?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Quản lý mã giảm giá</h3>
        <div class="text-muted">Tạo / sửa / khóa mã khuyến mãi.</div>
    </div>
    <a class="btn btn-danger" asp-action="Create">
        <i class="fas fa-plus me-1"></i> Tạo mã
    </a>
</div>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Tìm theo mã</label>
                <input name="q" value="@q" class="form-control" placeholder="VD: FREESHIP10" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select class="form-select" name="active">
                    <option value="">Tất cả</option>
                    <option value="true" selected="@(active == true)">Đang hoạt động</option>
                    <option value="false" selected="@(active == false)">Đã khóa</option>
                </select>
            </div>
            <div class="col-md-5 d-flex gap-2">
                <button class="btn btn-dark" type="submit">
                    <i class="fas fa-filter me-1"></i> Lọc
                </button>
                <a class="btn btn-outline-secondary" asp-action="Index">Reset</a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-dark text-center">
                <tr>
                    <th>ID</th>
                    <th>Mã</th>
                    <th>% Giảm</th>
                    <th>Bắt đầu</th>
                    <th>Kết thúc</th>
                    <th>Trạng thái</th>
                    <th style="width:220px;">Thao tác</th>
                </tr>
            </thead>
            <tbody class="text-center">
            @if (Model.Count == 0)
            {
                <tr><td colspan="7" class="text-muted py-4">Chưa có mã giảm giá.</td></tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Magiamgia</td>
                        <td class="fw-bold">@item.Code</td>
                        <td>@item.Giatriphantram%</td>
                        <td>@item.Ngaybatdau.ToString("dd/MM/yyyy")</td>
                        <td>@item.Ngayketthuc.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.Trangthai)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Đã khóa</span>
                            }
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Edit" asp-route-id="@item.Magiamgia">
                                <i class="fas fa-pen"></i> Sửa
                            </a>

                            <form asp-action="Toggle" asp-route-id="@item.Magiamgia"
                                  method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm @(item.Trangthai ? "btn-outline-danger" : "btn-outline-success")">
                                    <i class="fas @(item.Trangthai ? "fa-lock" : "fa-lock-open")"></i>
                                    @(item.Trangthai ? "Khóa" : "Mở")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
