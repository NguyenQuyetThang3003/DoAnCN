@model WedNightFury.Models.User

@{
    ViewData["Title"] = "Đăng ký khách hàng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NightFury</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body{
            min-height:100vh;
            background: linear-gradient(135deg, #dc3545, #9f1d2d);
            font-family: "Segoe UI", system-ui, -apple-system, BlinkMacSystemFont;
        }

        .auth-wrapper{
            min-height:100vh;
            display:flex;
            align-items:center;
            justify-content:center;
            padding:24px;
        }

        .auth-card{
            background:#fff;
            border-radius:18px;
            max-width: 880px;
            width:100%;
            box-shadow: 0 20px 45px rgba(0,0,0,.28);
            overflow:hidden;
        }

        .auth-left{
            background: linear-gradient(160deg, #dc3545, #7f1320);
            color:#fff;
            padding:38px;
            position:relative;
        }

        .brand-row{
            display:flex;
            align-items:center;
            gap:12px;
        }

        .brand-logo{
            width:54px;
            height:54px;
            border-radius:16px;
            background: rgba(255,255,255,.12);
            border: 1px solid rgba(255,255,255,.18);
            display:grid;
            place-items:center;
            overflow:hidden;
            box-shadow: 0 10px 24px rgba(0,0,0,.18);
            flex: 0 0 auto;
        }

        .brand-logo img{
            width: 42px;
            height: 42px;
            object-fit: contain;
            display:block;
        }

        .brand-title{
            font-size: 26px;
            font-weight: 900;
            letter-spacing: .3px;
            margin:0;
            line-height:1.1;
        }

        .brand-sub{
            opacity:.88;
            font-size:14px;
            margin-top:4px;
        }

        .auth-bullets{
            margin-top:18px;
            font-size:.92rem;
            opacity:.95;
        }
        .auth-bullets i{ width:18px; }

        .auth-right{
            padding:38px;
        }

        .top-brand-mobile{
            display:none;
            text-align:center;
            margin-bottom: 14px;
        }
        .top-brand-mobile img{
            height: 56px;
        }

        .page-title{
            font-weight:900;
            letter-spacing:-.2px;
            margin-bottom: 6px;
        }
        .page-sub{
            color:#6c757d;
            margin-bottom: 18px;
        }

        .section-title{
            font-weight: 800;
            margin: 18px 0 12px;
            display:flex;
            align-items:center;
            gap:8px;
            color:#111827;
        }

        .form-label{
            font-weight: 700;
            color:#374151;
            font-size: .92rem;
        }

        .form-control, .form-select{
            border-radius: 12px;
            padding: 10px 14px;
            border: 1px solid rgba(17,24,39,.14);
        }
        .form-control:focus, .form-select:focus{
            border-color: rgba(220,53,69,.45);
            box-shadow: 0 0 0 .2rem rgba(220,53,69,.16);
        }

        .input-group-text{
            background:#fff;
            border-radius: 12px;
            border: 1px solid rgba(17,24,39,.14);
            border-left: 0;
            cursor:pointer;
            user-select:none;
        }

        .divider{
            height:1px;
            background:#e9ecef;
            margin: 18px 0;
        }

        .btn-danger{
            border-radius: 12px;
            font-weight: 800;
            padding: 10px 14px;
        }

        .btn-outline-secondary{
            border-radius: 12px;
            font-weight: 700;
            padding: 10px 14px;
        }

        @@media (max-width: 768px){
            .auth-left{ display:none; }
            .auth-right{ padding: 26px; }
            .top-brand-mobile{ display:block; }
        }
    </style>
</head>

<body>
<div class="auth-wrapper">
    <div class="auth-card row g-0">

        <!-- LEFT BRAND -->
        <div class="col-md-4 auth-left">
            <div class="brand-row">
                <div class="brand-logo">
                    <img src="~/images/logo.png" alt="NightFury Logo" />
                </div>
                <div>
                    <p class="brand-title mb-0">NightFury</p>
                    <div class="brand-sub">Nền tảng giao hàng thông minh</div>
                </div>
            </div>

            <div class="auth-bullets mt-4">
                <div class="mb-2"><i class="fas fa-bolt me-2"></i>Đăng ký nhanh, tạo đơn ngay</div>
                <div class="mb-2"><i class="fas fa-map-location-dot me-2"></i>Theo dõi giao hàng realtime</div>
                <div class="mb-2"><i class="fas fa-shield-halved me-2"></i>Quản lý thông tin an toàn</div>
            </div>
        </div>

        <!-- RIGHT FORM -->
        <div class="col-md-8 auth-right">

            <!-- MOBILE LOGO (khi cột trái ẩn vẫn giữ logo) -->
            <div class="top-brand-mobile">
                <img src="~/images/logo.png" alt="NightFury Logo" />
            </div>

            <div class="text-center text-md-start">
                <h4 class="page-title">Đăng ký khách hàng</h4>
                <div class="page-sub">Tạo tài khoản để quản lý đơn hàng và theo dõi giao hàng.</div>
            </div>

            <form asp-action="Register" asp-controller="Auth" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <!-- ACCOUNT -->
                <div class="section-title">
                    <i class="fas fa-user"></i> Thông tin tài khoản
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="VD: datnguyen" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" id="pwd"
                                   placeholder="Tối thiểu 6 ký tự" />
                            <span class="input-group-text" onclick="togglePwd()" title="Hiện/ẩn mật khẩu">
                                <i class="fas fa-eye" id="pwdIcon"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                </div>

                <div class="divider"></div>

                <!-- CONTACT -->
                <div class="section-title">
                    <i class="fas fa-address-card"></i> Thông tin liên hệ
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="VD: abc@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="VD: 09xxxxxxxx" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                </div>

                <div class="divider"></div>

                <!-- EXTRA -->
                <div class="section-title">
                    <i class="fas fa-building"></i> Thông tin bổ sung
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CitizenId" class="form-label"></label>
                        <input asp-for="CitizenId" class="form-control" placeholder="VD: 0xxxxxxxxxxxx" />
                        <span asp-validation-for="CitizenId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CompanyName" class="form-label"></label>
                        <input asp-for="CompanyName" class="form-control" placeholder="VD: NightFury Logistics" />
                        <span asp-validation-for="CompanyName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-2 mt-4">
                    <div class="col-md-6">
                        <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-arrow-left me-1"></i> Đã có tài khoản
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-user-plus me-1"></i> Tạo tài khoản
                        </button>
                    </div>
                </div>
            </form>

            <div class="text-center mt-3 small text-muted">
                Khi đăng ký, bạn đồng ý với điều khoản sử dụng của NightFury.
            </div>
        </div>
    </div>
</div>

<script>
    function togglePwd() {
        const input = document.getElementById("pwd");
        const icon = document.getElementById("pwdIcon");

        if (!input) return;

        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<partial name="_ValidationScriptsPartial" />

</body>
</html>
