@{
    ViewData["Title"] = "Theo dõi đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center py-5">
    <h4 class="text-primary mb-4">
        <i class="fas fa-location-dot"></i> Theo dõi đơn hàng
    </h4>

    <form asp-action="Find" method="post" class="d-flex justify-content-center">
        @Html.AntiForgeryToken()

        <div class="input-group" style="max-width:600px;">
            <input type="text"
                   name="keyword"
                   class="form-control form-control-lg"
                   placeholder="Nhập mã đơn (NF-...) hoặc SĐT người gửi/nhận"
                   autocomplete="off"
                   required />

            <button type="submit" class="btn btn-danger btn-lg">
                <i class="fas fa-search"></i> Tra cứu
            </button>
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning mt-4 text-center" style="max-width:600px; margin: 0 auto;">
            <i class="fas fa-exclamation-triangle text-danger me-2"></i> @ViewBag.Message
        </div>
    }
</div>
