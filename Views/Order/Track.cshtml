@{
    ViewData["Title"] = "Tra cứu vận đơn";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<div class="driver-track container py-4">

    <!-- Header -->
    <div class="d-hero mb-3">
        <div class="d-flex align-items-center gap-3">
            <div class="d-ic"><i class="bi bi-truck"></i></div>
            <div class="min-w-0">
                <h3 class="m-0 d-title">Tra cứu vận đơn</h3>
                <div class="d-sub text-muted">
                    Chỉ nhập mã đơn (NF-...) để kiểm tra trạng thái
                </div>
            </div>
        </div>

        <div class="d-badge">
            <span class="live-dot"></span>
            <span>TRACKING</span>
        </div>
    </div>

    <!-- Search Card -->
    <div class="d-card mb-3">
        <form asp-controller="Order" asp-action="Find" method="post" class="w-100">
            @Html.AntiForgeryToken()

            <div class="input-group input-group-lg d-group">
                <span class="input-group-text d-prefix" title="Tìm kiếm">
                    <i class="bi bi-search"></i>
                </span>

                <input id="kw"
                       type="text"
                       name="keyword"
                       class="form-control d-input"
                       placeholder="Nhập mã đơn (VD: NF-123456)"
                       autocomplete="off"
                       required />

                <button type="submit" class="btn btn-danger d-btn">
                    <i class="bi bi-search me-1"></i> Tra cứu
                </button>
            </div>

            <!-- Quick chip: chỉ NF- -->
            <div class="d-chips mt-3">
                <button type="button" class="chip" onclick="setKw('NF-')">
                    <i class="bi bi-upc-scan me-1"></i> NF-
                </button>
                <button type="button" class="chip chip-soft" onclick="clearKw()">
                    <i class="bi bi-x-circle me-1"></i> Xoá nhanh
                </button>
            </div>
        </form>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning d-alert" role="alert">
            <div class="d-flex align-items-start gap-2">
                <i class="bi bi-exclamation-triangle-fill text-danger mt-1"></i>
                <div>
                    <div class="fw-bold">Không tìm thấy kết quả</div>
                    <div>@ViewBag.Message</div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function setKw(v) {
        const el = document.getElementById('kw');
        if (!el) return;
        el.value = v;
        el.focus();
    }

    function clearKw() {
        const el = document.getElementById('kw');
        if (!el) return;
        el.value = '';
        el.focus();
    }
</script>

<style>
    .driver-track{
        --border: rgba(17,24,39,.12);
        --shadow: 0 10px 30px rgba(17,24,39,.08);
        font-family: "Segoe UI", system-ui, -apple-system, Arial, sans-serif;
    }

    .d-hero{
        padding: 16px 18px;
        border-radius: 18px;
        border: 1px solid var(--border);
        background: linear-gradient(180deg, rgba(25,135,84,.14), rgba(25,135,84,.03));
        box-shadow: var(--shadow);
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap: 14px;
        flex-wrap: wrap;
    }
    .d-ic{
        width: 46px; height: 46px;
        border-radius: 16px;
        display:grid; place-items:center;
        background:#fff;
        border:1px solid var(--border);
        box-shadow: 0 8px 24px rgba(17,24,39,.08);
        font-size: 20px;
        color:#198754;
        flex: 0 0 auto;
    }
    .d-title{
        font-weight: 950;
        letter-spacing: -0.2px;
        color:#198754;
        text-transform: uppercase;
        font-size: 1.15rem;
    }
    .d-sub{ margin-top:4px; font-size:.95rem; line-height:1.35; }

    .d-badge{
        display:inline-flex; align-items:center; gap:10px;
        padding: 10px 12px;
        border-radius: 999px;
        border:1px solid var(--border);
        background:#fff;
        box-shadow: 0 8px 18px rgba(17,24,39,.06);
        color:#6b7280;
        font-weight: 900;
        font-size: .85rem;
        letter-spacing: .6px;
        user-select:none;
        white-space: nowrap;
    }
    .live-dot{
        width:10px;height:10px;border-radius:99px;
        background:#22c55e;
        box-shadow: 0 0 0 4px rgba(34,197,94,.18);
        display:inline-block;
    }

    .d-card{
        border-radius: 18px;
        border: 1px solid var(--border);
        background:#fff;
        box-shadow: var(--shadow);
        padding: 16px 18px;
    }

    .d-group{
        border-radius: 14px;
        overflow:hidden;
        box-shadow: 0 10px 24px rgba(17,24,39,.10);
    }
    .d-prefix{
        background: rgba(25,135,84,.10);
        border:0;
        padding: 0 16px;
        color:#198754;
    }
    .d-input{
        border:0;
        outline:none;
        font-weight: 650;
    }
    .d-input:focus{ box-shadow:none; }
    .d-btn{
        border:0;
        font-weight: 900;
        padding-left: 20px;
        padding-right: 20px;
    }

    .d-chips{
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
    }
    .chip{
        display:inline-flex;
        align-items:center;
        gap:8px;
        padding: 9px 12px;
        border-radius: 999px;
        border: 1px solid rgba(17,24,39,.12);
        background:#fff;
        box-shadow: 0 8px 18px rgba(17,24,39,.05);
        font-weight: 850;
        color:#111827;
        cursor:pointer;
        user-select:none;
    }
    .chip:hover{ transform: translateY(-1px); box-shadow: 0 12px 22px rgba(17,24,39,.08); }
    .chip-soft{
        background: rgba(25,135,84,.06);
        color:#0f5132;
        border-color: rgba(25,135,84,.18);
    }

    .d-alert{
        border-radius: 16px;
        border: 1px solid rgba(255,193,7,.35);
        box-shadow: 0 10px 24px rgba(17,24,39,.08);
        max-width: 980px;
    }

    @@media (max-width: 576px){
        .d-btn{ width: 100%; }
        .d-group{ flex-direction: column; }
        .d-prefix{ display:none; }
    }
</style>
